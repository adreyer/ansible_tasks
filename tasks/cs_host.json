{
  "input_method": "stdin", 
  "description": "Create, update and remove hosts.", 
  "parameters": {
    "username": {
      "type": "Optional[String[0]]", 
      "description": "Username for the host."
    }, 
    "api_key": {
      "type": "Optional[String[0]]", 
      "description": "API key of the CloudStack API."
    }, 
    "name": {
      "type": "String[0]", 
      "description": "Name of the host."
    }, 
    "api_http_method": {
      "type": "Optional[Enum[\"get\", \"post\"]]", 
      "description": "HTTP method used."
    }, 
    "host_tags": {
      "type": "Optional[String[0]]", 
      "description": "Tags of the host."
    }, 
    "api_secret": {
      "type": "Optional[String[0]]", 
      "description": "Secret key of the CloudStack API."
    }, 
    "api_timeout": {
      "type": "Optional[String[0]]", 
      "description": "HTTP timeout."
    }, 
    "api_region": {
      "type": "Optional[String[0]]", 
      "description": "Name of the ini section in the C(cloustack.ini) file."
    }, 
    "cluster": {
      "type": "Optional[String[0]]", 
      "description": "Name of the cluster."
    }, 
    "zone": {
      "type": "Optional[String[0]]", 
      "description": "Name of the zone in which the host should be deployed."
    }, 
    "state": {
      "type": "Optional[Enum[\"present\", \"absent\"]]", 
      "description": "State of the host."
    }, 
    "hypervisor": {
      "type": "Optional[Enum[\"KVM\", \"VMware\", \"BareMetal\", \"XenServer\", \"LXC\", \"HyperV\", \"UCS\", \"OVM\", \"Simulator\"]]", 
      "description": "Name of the cluster."
    }, 
    "pod": {
      "type": "Optional[String[0]]", 
      "description": "Name of the pod."
    }, 
    "password": {
      "type": "Optional[String[0]]", 
      "description": "Password for the host."
    }, 
    "allocation_state": {
      "type": "Optional[Enum[\"enabled\", \"disabled\"]]", 
      "description": "Allocation state of the host."
    }, 
    "api_url": {
      "type": "Optional[String[0]]", 
      "description": "URL of the CloudStack API e.g. https://cloud.example.com/client/api."
    }
  }
}